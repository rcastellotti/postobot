{
  "name": "postobot",
  "description": "Un bot per prenotare le lezioni di Unige",
  "website": "https://github.com/rcastellotti/postobot",
  "addons": ["heroku-postgresql:hobby-dev"],
  "stack": "heroku-18",
  "env": {
    "MATRICOLA": {
      "description": "La tua matricola",
      "value": ""
    },
    "PASSWORD": {
      "description": "La tua password",
      "value": ""
    },
    "BOT_TOKEN": {
      "description": "Il BOT_TOKEN ottenuto precedentemente",
      "value": ""
    },
    "CHAT_ID": {
      "description": "Il CHAT_ID ottenuto precedentemente",
      "value": ""
    },
    "PATH": {
      "value": "/usr/local/bin:/usr/bin:/bin:/app/vendor/:/app/vendor/firefox"
    },
    "LD_LIBRARY_PATH": {
      "value": "/usr/local/lib:/usr/lib:/lib:/app/vendor:/app/vendor/firefox"
    }
  },
  "scripts": {
    "postdeploy": "alembic upgrade head && python3 main.py"
  },
  "buildpacks": [
    {
      "url": "http://github.com/buitron/geckodriver-buildpack"
    },
    {
      "url": "http://github.com/evosystem-jp/heroku-buildpack-firefox"
    },
    {
      "url": "heroku/python"
    }
  ]
}
