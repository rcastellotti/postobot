{
  "name": "postobot",
  "description": "Un bot per prenotare le lezioni di Unige",
  "website": "https://github.com/rcastellotti/postobot",
  "addons": ["heroku-postgresql:hobby-dev"],
  "env": {
    "RAILS_ENV": "production",
